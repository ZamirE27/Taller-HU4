@model IEnumerable<Taller_HU4.Models.Book>

<h2>Book List</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Book</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Author</th>
            <th>Code</th>
            <th>Available</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var book in Model)
    {
        <tr>
            <td>@book.Id</td>
            <td>@book.Tittle</td>
            <td>@book.Author</td>
            <td>@book.Code</td>
            <td>@book.Available</td>
            <td>
                <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>